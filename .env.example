# AniCards example env file. Copy to `.env.local` and fill in production values.

# AniList GraphQL token (server):
ANILIST_TOKEN=

# Upstash Redis connection (server):
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Analytics & Site configuration
NEXT_PUBLIC_SITE_URL=https://anicards.alpha49.com
NEXT_PUBLIC_API_URL=http://localhost:3000
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Card SVG CORS origin (restrict in production)
NEXT_PUBLIC_CARD_SVG_ALLOWED_ORIGIN=

# Cron secret used to authenticate background cron endpoints (optional in dev)
CRON_SECRET=changeme

# Optional API secret for internal APIs
API_SECRET_TOKEN=changeme

# Vercel (set in production hosting) - don't use in local .env; the value gets set by the platform
VERCEL=

# Use `VERCEL=1` in production if needed; keep empty in local dev
